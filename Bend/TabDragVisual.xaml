<Window x:Class="Bend.TabDragVisual"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TabDragVisual" Height="300" Width="300" AllowsTransparency="True" WindowStyle="None" BorderThickness="0" Background="Transparent" SizeToContent="WidthAndHeight" ShowInTaskbar="False" ResizeMode="NoResize">
    <Grid>
        <WrapPanel  VerticalAlignment="Top" HorizontalAlignment="Left" Height="20" Background="{DynamicResource BackgroundBrush}">
            <TextBlock Name="Title" Foreground="{DynamicResource ForegroundBrush}" FontFamily="Segoe UI" FontSize="12" Padding="5,0,5,0" VerticalAlignment="Top" MinWidth="110" TextAlignment="Center">Mock</TextBlock>
        </WrapPanel>
        <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0,20,0,0"  Background="{DynamicResource BackgroundBrush}"></Grid>
        <Image Name="EditorSnapShot" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0,25,0,10"></Image>
    </Grid>
</Window>
